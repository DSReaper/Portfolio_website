<%- include('partials/head') %> <%- include('partials/header') %>

<main id="home" class="main">
  <!-- Hero -->
  <section class="hero container" aria-label="Intro">
    <div class="hero-grid">
      <div>
        <h1 class="headline">
          Hi, I’m <span class="accent"><%= profile.name %></span>.
        </h1>
        <p class="subtitle"><%= profile.role %> • <%= profile.location %></p>
        <p class="blurb"><%= profile.bio %></p>
        <div class="cta-row">
          <a class="btn" href="#projects">View Projects</a>
          <a class="btn-outline" href="#contact">Contact Me</a>
        </div>
      </div>
      <div class="portrait-wrap">
        <img
          src="<%= profile.photo %>"
          alt="Portrait of <%= profile.name %>"
          class="portrait"
        />
      </div>
    </div>
  </section>

  <!-- About -->
  <section id="about" class="section container" aria-label="About me">
    <h2 class="section-title">About</h2>
    <p>
      I am Zac Myburgh, an Information Technology student with a passion for
      software enginering and innovation. I enjoy creating modern, efficient,
      and user-focused applications that bring ideas to life. Throughout my
      studies, I have worked on a variety of projects ranging from student
      management systems and web applications to AI-driven tools and chatbots.
      My growing skill set includes technologies such as Node.js, Express, Java,
      C#, and Python, as well as frameworks used in AI and data analysis. I take
      pride in writing clean, scalable code and designing intuitive systems that
      enhance user experience. I am continuously learning and exploring new
      technologies to sharpen my craft and prepare for a future in full-stack
      and AI-powered software development.
    </p>
  </section>

  <!-- Projects (GitHub Carousel) -->
  <section id="projects" class="section container" aria-label="Projects">
    <h2 class="section-title">Projects</h2>

    <% if (!repos || repos.length === 0) { %>
    <p>
      No public repositories found for
      <strong
        ><%= (profile.socials.github || '').replace('https://github.com/','')
        %></strong
      >.
    </p>
    <% } else { %>
    <div class="swiper portfolio-swiper" aria-label="GitHub Projects Carousel">
      <div class="swiper-wrapper">
        <% repos.forEach(repo => { %>
        <div class="swiper-slide">
          <article class="card" tabindex="0">
            <header class="card-header">
              <h3 class="card-title"><%= repo.name %></h3>
              <span class="badge"><%= repo.language %></span>
            </header>
            <p class="card-desc">
              <%= repo.description || 'No description provided.' %>
            </p>
            <div class="card-meta">
              <span>★ <%= repo.stars %></span>
              <span
                >Updated: <%= new Date(repo.updated_at).toLocaleDateString()
                %></span
              >
            </div>
            <div class="card-actions">
              <a
                class="btn-sm"
                href="<%= repo.html_url %>"
                target="_blank"
                rel="noopener"
                >Repo</a
              >
              <% if (repo.homepage) { %>
              <a
                class="btn-sm btn-ghost"
                href="<%= repo.homepage %>"
                target="_blank"
                rel="noopener"
                >Live</a
              >
              <% } %>
            </div>
            <% if (repo.topics && repo.topics.length) { %>
            <ul class="topics" aria-label="Topics">
              <% repo.topics.slice(0,6).forEach(t => { %>
              <li>#<%= t %></li>
              <% }) %>
            </ul>
            <% } %>
          </article>
        </div>
        <% }) %>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev" aria-label="Previous"></div>
      <div class="swiper-button-next" aria-label="Next"></div>
    </div>
    <% } %>
  </section>

  <!-- Contact (list only, no form) -->
  <section id="contact" class="section container" aria-label="Contact">
    <h2 class="section-title">Contact</h2>
    <ul class="contact-list">
      <li><strong>Email:</strong> <%= profile.email %></li>
      <li><strong>Mobile:</strong> <%= profile.mobile %></li>
      <li>
        <strong>LinkedIn:</strong>
        <a href="<%= profile.socials.linkedin %>" target="_blank" rel="noopener"
          ><%= profile.socials.linkedin %></a
        >
      </li>
    </ul>
  </section>
</main>

<%- include('partials/footer') %>
